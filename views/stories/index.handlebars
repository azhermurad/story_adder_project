<div class="row">
  {{#each story}}

  <div class="col s12 m6">
    <div class="card">
      {{#if ../user}}
      {{#compare user._id ../user._id}}
      <div class="card-image">
        <a class="btn-floating halfway-fab waves-effect waves-light red pulse" href="/stories/edit/{{_id}}"><i
            class="material-icons">mode_edit</i></a>
      </div>
      {{/compare}}
      {{/if}}
      <div class="card-content center-align">
        <div class="card-title">
          <h5>{{title}}</h5>
        </div>
        <p>
          {{{stripTags (truncate description 50)}}}
        </p>
        <br>
        <div class="chip">
          <img src="{{user.image}}" alt="{{user.firstName}}">
          {{user.firstName}} {{user.lastName}}
        </div>
        <p>{{dateFormat createdAt "month"}}</p>
      </div>
      <div class="card-action center-align">
        <a class="btn red" href="/stories/show/{{_id}}">Read More</a>
      </div>
    </div>
  </div>
  {{else}}
  <h5>no stories are found in the database</h5>
  {{/each}}
</div>

